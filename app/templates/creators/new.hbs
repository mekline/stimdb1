<!-- app/templates/creators/new.hbs -->

<h3>Add a new stimulus set contributor</h3>

<div class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Name</label>
    <div class="col-sm-10">
      {{input type="text" value=model.name class="form-control" placeholder="The person's name"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Email Address</label>
    <div class="col-sm-10">
      {{input type="text" value=model.emailaddress class="form-control" placeholder="The person's email address"}}
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Website</label>
    <div class="col-sm-10">
      {{input type="text" value=model.website class="form-control" placeholder="The person's website"}}
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default" {{action 'saveCreator' model}}>Add to creator list</button>
    </div>
  </div>
</div>